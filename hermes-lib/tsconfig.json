{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es6"],
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"downlevelIteration": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	]
}